@using web_coffee.Models


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage:10);
}
@grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle: "gridHead",
    footerStyle:"gridFooter",
    rowStyle:"gridRow",
    alternatingRowStyle:"gridAltRow",
    columns: grid.Columns(
      grid.Column("MaSP", "Mã sản phẩm"),
      grid.Column("MaDM","Mã Danh Mục"),
      grid.Column("TenSP", "Tên sản phẩm"),
      grid.Column("Gia", "Giá"),
      grid.Column("MoTa", "Mô tả",format:p => Html.Raw(p.MoTa)),
      grid.Column("Anh", "Hình Ảnh",format: p=> Html.Raw("<img src=\"../../Content/images/"+p.Anh+"\">")),
      grid.Column(format: p=> Html.ActionLink("Chỉnh sửa","Chinhsua",new { id=p.MaSP})),
      grid.Column(format: p => Html.ActionLink("Xóa", "Xoa", new { id = p.MaSP }))
    ))


           

